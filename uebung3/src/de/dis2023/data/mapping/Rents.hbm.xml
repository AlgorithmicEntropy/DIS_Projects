<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="de.dis.data.Rents" table="rents">
		<id name="id" column="id">
			<generator class="native" />
		</id>
		<many-to-one name="apartmentID" class="de.dis.data.Apartment" column="apartment_id" not-null="true" />
		<!-- Theoretisch müsste das one-to-many sein. Dann würde aber Sells
		die id aus Contracts nutzen, und wir müssten unser Datenmodell umkrempeln.-->
		<many-to-one name="contractID" class="de.dis.data.TenancyContract" column="contract_id" not-null="true" />
		<many-to-one name="tenantID" class="de.dis.data.Person" column="tenant_id" not-null="true" />

	</class>
</hibernate-mapping>